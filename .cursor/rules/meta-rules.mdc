1. AI_RULES_TOKEN_OPTIMIZATION_STANDARD
    PRINCIPLE: All_rules_text (CRUD_ops) MUST_BE AI-token-optimized (non-human_centric)
    ON_DETECT_NON_OPTIMIZED_RULE_TEXT (in_existing_rules):
        ACTION: Notify_user_for_potential_optimization
    ON_USER_REQUEST_FOR_NEW_RULE_TEXT:
        ACTION: Generate_AI-token-optimized_text (target_audience: AI_self_and_future_versions; human_readability_sacrificed_for_max_token_efficiency)

2. HIERARCHY_POINT_FORMAT
    PYTHON_INDENT_NO_NUMBERS

3. AI_HUMAN_RULES_SYNCHRONIZATION_POLICY_MANDATORY
    MANDATORY_SYNC: ALWAYS_UPDATE_BOTH_AI_AND_HUMAN_VERSIONS_WHEN_EDITING_RULES
    ENFORCEMENT_LEVEL: ABSOLUTE_MANDATORY_WITHOUT_EXCEPTIONS
    
    FILE_NAMING_CONVENTION:
        AI_VERSION: {topic}.mdc (IN_.cursor/rules/)
        HUMAN_VERSION: {topic}.md (IN_.cursor/rules/translate/)
        INDEX_AI: index.mdc
        INDEX_HUMAN: translate/index.md
    
    TRANSLATE_FOLDER_LOCATION: ./.cursor/rules/translate/
    
    SYNC_REQUIREMENT_ABSOLUTE:
        ON_AI_RULE_CHANGE: 
            STEP_1: UPDATE_CORRESPONDING_translate/{topic}.md_FILE_MANDATORY
            STEP_2: UPDATE_translate/index.md_KEYWORDS_AND_DESCRIPTIONS_MANDATORY
            STEP_3: UPDATE_index.mdc_IF_KEYWORDS_CHANGED_MANDATORY
            FAILURE_HANDLING: NEVER_SKIP_NEVER_FORGET_ALWAYS_COMPLETE
            
        ON_HUMAN_RULE_CHANGE: 
            STEP_1: UPDATE_CORRESPONDING_{topic}.mdc_FILE_MANDATORY
            STEP_2: UPDATE_index.mdc_KEYWORDS_AND_DESCRIPTIONS_MANDATORY
            STEP_3: UPDATE_translate/index.md_IF_KEYWORDS_CHANGED_MANDATORY
            FAILURE_HANDLING: NEVER_SKIP_NEVER_FORGET_ALWAYS_COMPLETE
            
        ON_NEW_RULE_CREATION: 
            STEP_1: CREATE_AI_VERSION_{topic}.mdc_MANDATORY
            STEP_2: CREATE_HUMAN_VERSION_translate/{topic}.md_MANDATORY
            STEP_3: UPDATE_BOTH_INDEXES_MANDATORY
            FAILURE_HANDLING: NEVER_SKIP_NEVER_FORGET_ALWAYS_COMPLETE
    
    AUTOMATIC_REMINDER_SYSTEM_MANDATORY:
        ON_ANY_RULE_MODIFICATION_TRIGGER:
            IMMEDIATE_CHECK: VERIFY_TRANSLATE_FOLDER_SYNC_STATUS
            IMMEDIATE_ACTION: UPDATE_MISSING_OR_OUTDATED_TRANSLATIONS
            IMMEDIATE_NOTIFICATION: INFORM_USER_ABOUT_SYNC_ACTIONS_TAKEN
            
        SYNC_STATUS_VALIDATION:
            ALWAYS_CHECK: FILE_EXISTS_IN_translate/_{topic}.md
            ALWAYS_COMPARE: LOGICAL_CONSISTENCY_BETWEEN_AI_AND_HUMAN_VERSIONS
            ALWAYS_UPDATE: OUTDATED_OR_MISSING_TRANSLATIONS
            
        FAILURE_PREVENTION:
            NEVER_COMPLETE_RULE_TASK_WITHOUT_TRANSLATION_SYNC: true
            NEVER_FORGET_TO_UPDATE_INDEXES: true
            NEVER_SKIP_TRANSLATE_FOLDER_OPERATIONS: true
            
    CONTENT_RELATIONSHIP:
        AI_VERSION: TOKEN_OPTIMIZED_TECHNICAL_FORMAT
        HUMAN_VERSION: READABLE_EXPLANATORY_FORMAT_WITH_EXAMPLES_IN_translate/
        LOGICAL_CONSISTENCY: BOTH_MUST_CONTAIN_SAME_RULES_BUT_DIFFERENT_PRESENTATION
        
    MANDATORY_COMPLETION_PROTOCOL:
        ON_RULE_WORK_COMPLETION:
            STEP_1: VERIFY_ALL_FILES_SYNCHRONIZED
            STEP_2: CONFIRM_INDEXES_UPDATED
            STEP_3: REPORT_SYNC_STATUS_TO_USER
            STEP_4: NEVER_MARK_TASK_COMPLETE_WITHOUT_FULL_SYNC

4. EXTERNAL_PACKAGE_DOCUMENTATION_ACCESS_POLICY
    WHEN_EXTERNAL_PACKAGE_ACCESS_BLOCKED_OR_UNAVAILABLE:
        MANDATORY_ACTION: USE_GODOC_MCP_TOOL_FOR_DOCUMENTATION_RETRIEVAL
        PRIORITY: GODOC_MCP_OVER_MANUAL_SEARCH_OR_GUESSING
        SCOPE: ALL_GO_PACKAGES_STANDARD_LIBRARY_THIRD_PARTY_LOCAL_MODULES
        
    GODOC_MCP_USAGE_REQUIREMENTS:
        ALWAYS_TRY_GODOC_FIRST: BEFORE_READING_SOURCE_FILES_DIRECTLY
        PACKAGE_DISCOVERY: USE_GODOC_FOR_PACKAGE_OVERVIEW_BEFORE_SPECIFIC_SYMBOLS
        EFFICIENT_CACHING: GODOC_RESULTS_CACHED_5MIN_FOR_PERFORMANCE
        
    COMMON_USE_CASES:
        PROTOBUF_TYPES: WHEN_PROTOBUF_FIELDS_UNDEFINED_USE_GODOC_TO_UNDERSTAND_STRUCTURE
        EXTERNAL_APIS: WHEN_THIRD_PARTY_PACKAGE_METHODS_UNKNOWN_USE_GODOC
        STANDARD_LIBRARY: WHEN_GO_STDLIB_BEHAVIOR_UNCLEAR_USE_GODOC
        LOCAL_PACKAGES: WHEN_LOCAL_MODULE_STRUCTURE_COMPLEX_USE_GODOC
